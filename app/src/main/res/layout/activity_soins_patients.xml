<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SoinsPatientsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="357dp"
        android:layout_height="273dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="504dp"
        app:srcCompat="@drawable/pills"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="68dp" />

    <TableLayout
        android:layout_width="398dp"
        android:layout_height="126dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="417dp"
        android:layout_marginBottom="303dp"
        android:stretchColumns="1"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="383dp">

        <TableRow>

            <TextView
                android:layout_column="1"
                android:background="#E4E4E4"
                android:padding="3dip"
                android:text="Rendez-vous 19/04/20" />

            <TextView
                android:background="#FFE4E4E4"
                android:gravity="right"
                android:padding="3dip"
                android:text="Cardiologue " />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:backgroundTint="#46BFBFBF"
                android:padding="3dip"
                android:text="Save..." />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="Ctrl-S" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:background="#FFE4E4E4"
                android:padding="3dip"
                android:text="Rendez-vous du 17/03/20 " />

            <TextView
                android:background="#FFE4E4E4"
                android:gravity="right"
                android:padding="3dip"
                android:text="Cardiologue " />
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:padding="3dip" />

            <TextView
                android:padding="3dip"
                android:text="Export..." />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="Ctrl-E" />
        </TableRow>


        <TableRow />
    </TableLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="569dp"
        android:fontFamily="@font/muli_light"
        android:text="Mes Traitements"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="533dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="352dp"
        android:fontFamily="@font/muli_light"
        android:text="Mes Soins"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="326dp" />

</RelativeLayout>