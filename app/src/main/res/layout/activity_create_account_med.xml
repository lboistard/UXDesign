<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CreateAccountPatient">


    <TextView
        android:id="@+id/createAccountTextView"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Création de compte"
        android:textAlignment="center"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/logoCreateAccount"
        android:layout_width="422dp"
        android:layout_height="267dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/createaccount" />

    <EditText
        android:id="@+id/emailUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:fontFamily="@font/muli_extralight"
        android:inputType="textPersonName"
        android:text="Email"
        android:textColor="#7A121212" />

    <EditText
        android:id="@+id/passwordUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:fontFamily="@font/muli_extralight"
        android:inputType="textPersonName"
        android:text="Password"
        android:textColor="#7A121212" />

    <EditText
        android:id="@+id/passwordAgainUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="381dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:fontFamily="@font/muli_extralight"
        android:inputType="textPersonName"
        android:text="Password"
        android:textColor="#7A121212" />

    <TextView
        android:id="@+id/confirmPasswordTextView"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="491dp"
        android:fontFamily="@font/muli_extralight_italic"
        android:text="confirmez votre mot de passe" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="618dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF9D8D"
        android:duplicateParentState="true"
        android:fontFamily="@font/muli"
        android:onClick="createAccount"
        android:text="Créer"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextCPS"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/muli_extralight"
            android:inputType="textPostalAddress"
            android:textColor="#7A121212"
            tools:text="N° CPS" />
    </LinearLayout>


</RelativeLayout>