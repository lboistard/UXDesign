<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AccueilMedecinActivity">

    <TextView
        android:id="@+id/textDossiers"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Dossiers"
        android:textAlignment="center"
        android:textSize="35sp"
        tools:ignore="HardcodedText,RtlHardcoded" />


    <ImageView
        android:id="@+id/logoAccueilPatient"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        app:srcCompat="@drawable/createaccount"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteY="69dp" />


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="379dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textNumSecu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_extralight_italic"
            android:text="NÂ° CPS :"
            android:textSize="12sp"
            tools:ignore="HardcodedText,RtlHardcoded"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="380dp" />


        <TextView
            android:id="@+id/inputNumCps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_extralight_italic"
            android:text="00 0000 0000 000"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="380dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>

    <TableLayout
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="450dp"
        android:gravity="center"
        android:stretchColumns="0,1,2">


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textNomTab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="@drawable/cell_shape_haut"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:text="Nom"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />


            <TextView
                android:id="@+id/textDateTab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@drawable/cell_shape_haut"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:text="Date"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />


            <TextView
                android:id="@+id/textActionTab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_marginRight="5dp"
                android:background="@drawable/cell_shape_haut"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:text="Action"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="@drawable/cell_shape_bas"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:text="Dupont"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@drawable/cell_shape_bas"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:text="03/01/2020"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/cell_shape_bas"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:padding="13dp"
                    android:tint="#FFAEAE"
                    tools:srcCompat="@drawable/close"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:padding="12dp"
                    android:tint="#FFAEAE"
                    tools:srcCompat="@drawable/edit"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="#FFAEAE"
                    tools:srcCompat="@drawable/eye"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="@drawable/cell_shape_bas"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:text="Mayer"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@drawable/cell_shape_bas"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:text="01/01/2019"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/cell_shape_bas"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:padding="13dp"
                    android:tint="#FFAEAE"
                    tools:srcCompat="@drawable/close"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:padding="12dp"
                    android:tint="#FFAEAE"
                    tools:srcCompat="@drawable/edit"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="#FFAEAE"
                    tools:srcCompat="@drawable/eye"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="@drawable/cell_shape_bas"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:padding="5dp"
                android:text="Soyer"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@drawable/cell_shape_bas"
                android:fontFamily="@font/muli_extralight"
                android:gravity="center"
                android:text="05/10/2019"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/cell_shape_bas"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:padding="13dp"
                    android:scaleType="fitCenter"
                    android:tint="#FFAEAE"
                    tools:ignore="ContentDescription"
                    tools:srcCompat="@drawable/close" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:padding="12dp"
                    android:tint="#FFAEAE"
                    tools:srcCompat="@drawable/edit"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="#FFAEAE"
                    tools:srcCompat="@drawable/eye"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            </LinearLayout>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAccountMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_menu"
            android:foreground="@drawable/user"
            android:foregroundGravity="center"
            android:onClick="toMedecinAccount"
            android:textColorLink="#FFFFFF"/>


        <Button
            android:id="@+id/buttonInfoMed"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_menu"
            android:foreground="@drawable/info"
            android:onClick="toInfoMedecin"
            android:foregroundGravity="center"
            android:textColorLink="#FFFFFF" />

        <Button
            android:id="@+id/buttonHomeMed"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_menu"
            android:foreground="@drawable/home"
            android:foregroundGravity="center"
            android:onClick="toHomeMedecin"
            android:textColorLink="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="409dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/add"
        android:backgroundTint="#FF5050"
        android:onClick="openAdd" />


</RelativeLayout>