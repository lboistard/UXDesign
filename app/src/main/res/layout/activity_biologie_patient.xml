<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BiologiePatientActivity">

    <TextView
        android:id="@+id/textPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Biologie"
        android:textAlignment="center"
        android:textSize="35sp" />

    <TableLayout
        android:layout_width="384dp"
        android:layout_height="566dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="201dp"
        android:stretchColumns="1"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="383dp">

        <TableRow>

            <TextView
                android:layout_column="1"
                android:background="#E4E4E4"
                android:padding="3dip"
                android:text="Rendez-vous 19/04/20" />

            <TextView
                android:background="#FFE4E4E4"
                android:gravity="right"
                android:padding="3dip"
                android:text="Cardiologue " />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:backgroundTint="#46BFBFBF"
                android:padding="3dip"
                android:text="Bilan sanguin du 23/03/20" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="Laboratoire" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:background="#FFE4E4E4"
                android:padding="3dip"
                android:text="Rendez-vous du 17/03/20 " />

            <TextView
                android:background="#FFE4E4E4"
                android:gravity="right"
                android:padding="3dip"
                android:text="Cardiologue " />
        </TableRow>


        <TableRow />
    </TableLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/patientAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_menu"
            android:foreground="@drawable/user"
            android:foregroundGravity="center"
            android:onClick="toPatientAccount"
            android:textColorLink="#FFFFFF" />

        <Button
            android:id="@+id/buttonInfosPatients"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_menu"
            android:foreground="@drawable/info"
            android:foregroundGravity="center"
            android:textColorLink="#FFFFFF" />

        <Button
            android:id="@+id/buttonHomePatient"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_menu"
            android:foreground="@drawable/home"
            android:foregroundGravity="center"
            android:textColorLink="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>