<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CreateAccountPatient">


    <TextView
        android:id="@+id/toPatient2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="630dp"
        android:fontFamily="@font/muli_extralight"
        android:onClick="toPatient"
        android:text="Déjà un compte ?"

        android:textAllCaps="false"
        android:textColor="#03A9F4" />

    <TextView
        android:id="@+id/createAccountTextView"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Création de compte"
        android:textAlignment="center"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/logoCreateAccount"
        android:layout_width="457dp"
        android:layout_height="317dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        app:srcCompat="@drawable/patient_account" />

    <EditText
        android:id="@+id/emailUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:fontFamily="@font/muli_extralight"
        android:inputType="textPersonName"

        android:hint="Email"
        android:textColor="#7A121212" />

    <EditText
        android:id="@+id/passwordUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:fontFamily="@font/muli_extralight"
        android:inputType="textPassword"
        android:hint="Password again"
        android:textColor="#7A121212" />

    <EditText
        android:id="@+id/passwordAgainUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="381dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="36dp"
        android:inputType="textPassword"
        android:ems="10"
        android:fontFamily="@font/muli_extralight"
        android:hint="Password"
        android:textColor="#7A121212" />

    <TextView
        android:id="@+id/confirmPasswordTextView"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="491dp"
        android:fontFamily="@font/muli_extralight_italic"
        android:text="confirmez votre mot de passe" />

    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/numSecuPatient"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/muli_extralight"
            android:inputType="textPersonName"
            android:textColor="#7A121212"
            android:hint="N° Sécurité sociale"/>
    </LinearLayout>

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#617BFC"
        android:duplicateParentState="true"
        android:fontFamily="@font/muli"
        android:onClick="createAccount"
        android:text="Créer"
        android:textColor="#FFFFFF" />





</RelativeLayout>

