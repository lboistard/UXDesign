<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CommentairesPatientsActivity">

    <TextView
        android:id="@+id/textCommentaires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Section Commentaire"
        android:textAlignment="center"
        android:textSize="35sp" />


    <EditText
        android:id="@+id/editTextInstructions"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="75dp"
        android:ems="10"
        android:fontFamily="@font/muli_extralight_italic"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Cette section est destiné aux commmentaires. Vous pouvez ici demander un conseil rapide à votre médecin traitant (celui référer dans votre dossier médical via votre numéro de sécurité sociale). Ces questions peuvent être relative à vos allergies, vos traitements en cours mais ne peuvent pas être des questions concernant un suivi médical approfondi où l'un de vos proches."
        android:textAlignment="center"
        android:textColor="#989797"
        android:textSize="12sp"
        tools:ignore="RtlCompat" />


    <EditText
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="254dp"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="373dp"
        android:layout_weight="1"
        android:background="#F4F4F4"
        android:textAlignment="viewStart"
        android:textColor="#4A4A4A" />

    <Button
        android:id="@+id/button2"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="554dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="245dp"
        android:text="Annulé" />

    <Button
        android:id="@+id/button3"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="105dp"

        android:layout_marginBottom="307dp"
        android:text="Envoyer"
        android:textColor="#515151"
        app:backgroundTint="#E1E1E1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_yesno"
            android:foreground="@drawable/user"
            android:foregroundGravity="center"
            android:onClick="toAccount"
            android:textColorLink="#FFFFFF" />



        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_yesno"
            android:foreground="@drawable/home"
            android:foregroundGravity="center"
            android:onClick="toPatientHome"
            android:textColorLink="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="683dp"
        android:fontFamily="@font/muli_light"
        android:text="Postez votre commentaire dans la zone ci-dessous puis cliquez sur envoyer !"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>